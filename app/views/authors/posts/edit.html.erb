<div class="row">
	<div class="col-md-4">
		<%= link_to 'Back', posts_path, class: "btn btn-secondary mb-3" %>
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Editing Post</h4>
				<%= render 'form', post: @post %>
			</div>
		</div>
	</div>
	<div class="col-md-8">
	  <div class="mb-3">
			<%= form_with(model: [@post, @element]) do |form| %>
	  	  <%= form.hidden_field :element_type, value: 'paragraph' %>
		    <%= form.submit "Paragraph", class:"btn btn-primary" %>
			<% end %>
		</div>
		<div class="card">
			<div class="card-body pt-3">
				<% @post.elements.each do |element| %>
					<% if element.persisted? %>
						<div class="parapgraph-content">
							<div class="mb-3">	
								<%= element.content %>
							</div>
						</div>
						<div class="paragraph-form">
							<%= form_with(model: [@post, @element]) do |form| %>
								<%= form.rich_text_area :content %>
								<%= form.submit "Save", class:"btn btn-primary mt-2" %>
							<% end %>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>